<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@android:color/white"
    tools:context=".profile">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg4" />

    <!-- Transparent black overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
     >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="My Profile"
          android:gravity="center"
          android:textStyle="bold"
          android:textSize="30dp"
          android:paddingTop="35dp"
          android:fontFamily="cursive"
          />
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="20dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18sp"
        android:paddingTop="10dp"   
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/textCoursedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course:"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        tools:ignore="DuplicateIds" />

    <!-- Editable Fields -->
    <!-- Name -->
    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="#4B4545"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnEditName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#2433C7"
            android:text="Edit" />

        <Button
            android:id="@+id/btnSaveName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>

    <!-- Email -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="#4B4545"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnEditEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="#2433C7"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/btnSaveEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Save" />
    </LinearLayout>

    <!-- Phone -->
    <EditText
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#4B4545"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnEditPhone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#2433C7"
            android:text="Edit" />

        <Button
            android:id="@+id/btnSavePhone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Save" />
    </LinearLayout>

    <!-- Course -->
    <TextView
        android:id="@+id/textCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Course"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="#4B4545"
        />

    <Spinner
        android:id="@+id/spinnerCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnEditCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#2433C7"
            android:text="Edit" />

        <Button
            android:id="@+id/btnSaveCourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
      </LinearLayout>
      </ScrollView>
      <include
          android:id="@+id/bottomNavigation"
          layout="@layout/bottom_nav"
          android:layout_width="match_parent"
          android:layout_height="55dp" />

  </LinearLayout>
</FrameLayout>
