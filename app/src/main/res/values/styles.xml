<resources>
    <!-- Profile Field Style -->
    <style name="ProfileFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/textbox_background</item>
    </style>

    <!-- Edit Text Field Style -->
    <style name="EditFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#9E9E9E</item>
    </style>
    <style name="ProfileFieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ProfileFieldValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
